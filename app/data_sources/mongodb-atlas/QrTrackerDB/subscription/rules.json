{
    "collection": "subscription",
    "database": "QrTrackerDB",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "subscriberId": "%%user.id"
            },
            "fields": {
                "_id": {},
                "trackerId": {}
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "anonymous",
            "apply_when": {
                "anonymous": true
            },
            "fields": {
                "_id": {},
                "trackerId": {}
            },
            "write": true,
            "insert": true,
            "delete": true,
            "search": false,
            "additional_fields": {}
        }
    ]
}
