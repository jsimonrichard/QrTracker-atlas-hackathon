{
    "collection": "tracker",
    "database": "QrTrackerDB",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "ownerId": "%%user.id"
            },
            "fields": {
                "_id": {},
                "allowAnyoneToUpdateStatus": {
                    "write": true
                },
                "collaboratorIds": {
                    "write": true
                },
                "createdAt": {
                    "write": true
                },
                "description": {
                    "write": true
