                "public": {
                    "write": true
                },
                "status": {
                    "write": true
                },
                "title": {
                    "write": true
                },
                "updatedAt": {
                    "write": true
                }
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "collaborator",
            "apply_when": {
                "collaboratorIds": {
                    "%exists": true
