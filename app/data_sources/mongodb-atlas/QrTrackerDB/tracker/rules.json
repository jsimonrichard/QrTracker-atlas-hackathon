{
    "collection": "tracker",
    "database": "QrTrackerDB",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "ownerId": "%%user.id"
            },
            "fields": {
                "history": {
                    "write": false
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "collaborator",
            "apply_when": {
                "collaboratorIds": "%%user.id"
            },
            "fields": {
                "description": {
                    "write": true
                },
                "status": {
                    "write": true
                },
                "updatedAt": {
                    "write": true
                }
            },
            "read": true,
            "insert": true,
            "delete": false,
            "search": true
        },
        {
            "name": "public",
            "apply_when": {
                "public": true
            },
            "fields": {
                "collaboratorIds": {
                    "read": "false"
                }
            },
            "read": true,
            "write": {
                "%%prevRoot": {
                    "$exists": false
                }
            },
            "insert": true,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
